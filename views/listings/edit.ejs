<% layout("/layouts/boilerplate") %>
    <div class="bg-image bg-login"></div> <!-- Reusing login background for consistency -->
    <div class="row mt-3">
        <div class="col-8 offset-2 col-md-6 offset-md-3 glass-form">
            <h3 class="text-center mb-4">Edit Price</h3>
            <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
                <div class="mb-4">
                    <label for="price" class="form-label">Update Price (â‚¹)</label>
                    <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control"
                        required>
                    <div class="invalid-feedback">Please enter a valid price</div>
                </div>

                <button type="submit" class="btn btn-dark edit-btn">Save Changes</button>
                <a href="/listings/<%= listing._id %>"
                    class="btn btn-secondary mt-3 d-block text-center glass-back-btn">Cancel</a>
            </form>
        </div>
    </div>